                <artifactId>base</artifactId>
                <version>${feature-probe-base.version}</version>
            </dependency>
            <dependency>
                <groupId>com.featureprobe</groupId>
                <artifactId>cache</artifactId>
                <version>${feature-probe-cache.version}</version>
            </dependency>
            <dependency>
                <groupId>com.featureprobe</groupId>
